{
  "name": "meta-graph-api-mcp-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for Meta Graph API - Facebook Pages, Instagram Business, content management, and analytics.",
  "keywords": [
    "mcp",
    "meta",
    "facebook",
    "instagram",
    "graph-api",
    "model-context-protocol",
    "pages-api"
  ],
  "author": "Jordan Burke <jordan.burke@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/jordanburke/meta-graph-api-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/jordanburke/meta-graph-api-mcp-server"
  },
  "bin": {
    "meta-graph-api-mcp-server": "./dist/bin.cjs"
  },
  "mcpName": "io.github.jordanburke.meta-graph-api-mcp-server",
  "scripts": {
    "validate": "ts-builds validate",
    "format": "ts-builds format",
    "format:check": "ts-builds format:check",
    "lint": "ts-builds lint",
    "lint:check": "ts-builds lint:check",
    "typecheck": "ts-builds typecheck",
    "test": "ts-builds test",
    "test:watch": "ts-builds test:watch",
    "test:coverage": "ts-builds test:coverage",
    "build": "ts-builds build",
    "dev": "ts-builds dev",
    "prepublishOnly": "pnpm validate",
    "inspect": "pnpm build && npx @modelcontextprotocol/inspector dist/index.cjs",
    "start": "pnpm build && node dist/index.cjs",
    "serve": "node dist/index.cjs",
    "serve:dev": "tsx watch src/index.ts"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "ts-builds": "^1.2.3",
    "tsdown": "^0.18.0",
    "tsx": "^4.21.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "fastmcp": "^3.25.3",
    "hono": "^4.10.7",
    "zod": "^4.1.13"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "lib",
    "dist"
  ],
  "prettier": "ts-builds/prettier",
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402"
}
